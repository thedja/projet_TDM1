<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devmobile.projet_tdm1.ChannelModeActivity">

    <!-- The navigation drawer -->
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <fragment
        android:id="@+id/nav_bar_fragment"
        android:layout_width="@dimen/drawer_left_pane_width"
        android:layout_height="match_parent"
        class="devmobile.projet_tdm1.NavBarFragment"
        android:layout_gravity="start"></fragment>
</android.support.v4.widget.DrawerLayout>


