<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/nav_bar_PaddingLeft"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bar_itemHeight"
    android:background="@drawable/navbar_item_selector">

    <ImageView
        android:layout_width="@dimen/nav_bar_iconSize"
        android:layout_height="@dimen/nav_bar_iconSize"
        android:padding="@dimen/nav_bar_iconPadding"
        android:id="@+id/icon"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_vertical"/>

    <!-- TODO : make 87% #000000 mentioned in Material Design guidelines -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_bar_itemTextMarginLeft"
        android:id="@+id/text"
        android:text="No text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_vertical"/>
</LinearLayout>