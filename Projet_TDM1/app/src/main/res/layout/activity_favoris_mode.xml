<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devmobile.projet_tdm1.FavorisModeActivity">

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


    <fragment
        android:id="@+id/nav_bar_fragment"
        android:layout_width="@dimen/drawer_left_pane_width"
        android:layout_height="match_parent"
        class="devmobile.projet_tdm1.NavBarFragment"
        android:layout_gravity="start"></fragment>
</android.support.v4.widget.DrawerLayout>


